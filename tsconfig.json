{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "skipLibCheck": true
  }
}